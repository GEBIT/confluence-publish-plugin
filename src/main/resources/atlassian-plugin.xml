<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <web-item key="publish-as-blog" name="Publish as Blog" section="system.content.action/secondary" weight="40">
        <label key="confluence.publish.asblog" />
        <link linkId="publish_asblog" absolute="true"></link>
        <condition class="com.atlassian.confluence.plugin.descriptor.web.conditions.HasPageCondition"/>
    </web-item>

    <web-resource key="publish-asblog-resources">
        <context>atl.general</context>
        <dependency>confluence.web.resources:ajs</dependency>
        <resource type="download" name="publish_asblog.js" location="js/publish_asblog.js"/>
    </web-resource>
</atlassian-plugin>
